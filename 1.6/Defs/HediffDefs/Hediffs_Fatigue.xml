<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ==========================Fatigue==================================== -->
  <HediffDef>
    <defName>Fatigue</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <label>fatigue</label>
    <description>fatigue</description>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-6</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>minor</label>
        <minSeverity>0.20</minSeverity>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <painOffset>0.45</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.75</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.75</minSeverity>
        <painOffset>0.65</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>overwhelming</label>
        <minSeverity>0.90</minSeverity>
        <painOffset>0.9</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-1.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-1.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <!-- ==========================Cream Pie'd==================================== -->
  <HediffDef>
    <defName>Creampied</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <label>humiliated</label>
    <description>humiliated</description>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-15</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>Creampied</label>
        <minSeverity>0.02</minSeverity>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.65</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>
