<Defs>
  <!-- Security Unfirom-->
  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_NT_Security</defName>
    <label>Security Officer Uniform</label>
    <description>Standard jumpsuit for Nanotrasen security personnel. Sewed with reinforced nano-fibre for extra protection.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Apparel/SecUniform/Security</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>2.5</Mass>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <MarketValue>450</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <Insulation_Cold>12</Insulation_Cold>
      <Insulation_Heat>6</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.03</MoveSpeed>
    </equippedStatOffsets>
    <generateCommonality>0.07</generateCommonality>
    <apparel>
      <layers>
        <li>OnSkin</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/SecUniform/Security</wornGraphicPath>
      <tags>
        <li>NT_Security</li>
      </tags>
    </apparel>
  </ThingDef>
