<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="AccessoryBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <thingCategories>
      <li>NT_Shoes</li>
      <li>NT_Apparel</li>
    </thingCategories>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <SellPriceFactor>0.1</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  <!--Jackboots-->
  <ThingDef ParentName="AccessoryBase">
    <defName>NT_JackBoots</defName>
    <label>Jackboots</label>
    <description>Standard jackboots, issued to all Nanotrasen security personnel. Helps keep the user on their feet and moving during combat situations.</description>
    <graphicData>
      <texPath>Things/Apparel/JackBoots/JackBoots</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>100</MarketValue>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.07</ArmorRating_Blunt>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>.05</MoveSpeed>
    </equippedStatOffsets>
    <generateCommonality>0.01</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Feet</li>
      </bodyPartGroups>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>NT_Security</li>
      </tags>
    </apparel>
  </ThingDef>
</Defs>